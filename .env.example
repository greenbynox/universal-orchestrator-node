# Configuration Backend
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# Base de données (pour les logs et métadonnées)
DATABASE_URL=sqlite://./data/orchestrator.db

# Sécurité
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-32-char-encryption-key-here

# Docker
DOCKER_SOCKET=/var/run/docker.sock

# Chemins des données nodes
NODES_DATA_PATH=./data/nodes
WALLETS_DATA_PATH=./data/wallets
LOGS_PATH=./data/logs

# Configuration des nodes par défaut
DEFAULT_NODE_MODE=pruned

# Paiements Crypto
PAYMENT_BTC_ADDRESS=your-btc-address
PAYMENT_ETH_ADDRESS=your-eth-address
PAYMENT_USDC_CONTRACT=0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48

# API Keys externes (optionnel)
INFURA_PROJECT_ID=your-infura-project-id
ALCHEMY_API_KEY=your-alchemy-api-key

# Premium Features
PREMIUM_ENABLED=false
STRIPE_SECRET_KEY=your-stripe-secret-key

# Limites
MAX_NODES_FREE=3
MAX_NODES_PREMIUM=unlimited
