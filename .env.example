# ============================================================
# NODE ORCHESTRATOR - Configuration
# ============================================================
# 100% FREE & OPEN SOURCE - NO LIMITS
# ============================================================

# Configuration Backend
NODE_ENV=development
PORT=3001
HOST=127.0.0.1

# Base de données (pour les logs et métadonnées)
DATABASE_URL=sqlite://./data/orchestrator.db

# Sécurité
JWT_SECRET=
# Must be exactly 32 characters in production (AES-256)
ENCRYPTION_KEY=
# Bypass d'auth en développement (true par défaut). Mettre false pour tester l'auth stricte.
DEV_AUTH_BYPASS=true
# Désactiver le rate limit en développement (true par défaut). Mettre false pour tester les 429.
DEV_DISABLE_RATE_LIMIT=true
# Activer le mode mock pour les hardware wallets en développement (false par défaut pour sécurité). Mettre true uniquement si vous voulez simuler sans device.
MOCK_HARDWARE_WALLET=false
# Auth API (appliquée sur toutes les routes /api)
# Modes: none | token | basic
API_AUTH_MODE=none
API_TOKEN=
API_BASIC_USER=
API_BASIC_PASS=
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Docker
DOCKER_SOCKET=/var/run/docker.sock
DOCKER_AUTO_START=true
DOCKER_MAX_RETRIES=30
DOCKER_RETRY_DELAY_MS=4000
# Forcer Docker reel (desactive le mode mock)
FORCE_DOCKER=true

# Chemins des données nodes
NODES_DATA_PATH=./data/nodes
WALLETS_DATA_PATH=./data/wallets
LOGS_PATH=./data/logs

# Configuration des nodes par défaut
DEFAULT_NODE_MODE=pruned
NODE_AUTO_RESTART=true
NODE_AUTO_RESTART_MAX_ATTEMPTS=3
NODE_AUTO_RESTART_DELAY_MS=10000

# Seuils d'alertes système
ALERT_CPU_THRESHOLD=85
ALERT_RAM_THRESHOLD=85
ALERT_DISK_THRESHOLD_GB=20

# APIs externes (optionnel - pour prix et données supplémentaires)
INFURA_PROJECT_ID=
ALCHEMY_API_KEY=

# Telegram notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord notifications
DISCORD_WEBHOOK_URL=

# Webhook secret (optional)
WEBHOOK_SECRET=

# ============================================================
# NOTE: Ce logiciel est 100% gratuit et open source.
# Il n'y a AUCUNE limite sur le nombre de nodes.
# Aucune fonctionnalité premium ou payante.
# ============================================================
