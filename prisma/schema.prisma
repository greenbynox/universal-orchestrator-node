generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Node {
  id           String   @id @default(cuid())
  name         String
  blockchain   String
  mode         String
  dataPath     String
  rpcPort      Int
  p2pPort      Int
  wsPort       Int?
  status       String   @default("stopped")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  metrics      MetricPoint[]
  logs         LogEntry[]
  alerts       Alert[]
}

model MetricPoint {
  id        String   @id @default(cuid())
  nodeId    String
  cpuUsage  Float
  memoryUsage Float
  diskUsage Float?
  networkIn Float?
  networkOut Float?
  createdAt DateTime @default(now())
  node      Node     @relation(fields: [nodeId], references: [id], onDelete: Cascade)
}

model LogEntry {
  id        String   @id @default(cuid())
  nodeId    String
  level     String
  message   String
  timestamp DateTime @default(now())
  node      Node     @relation(fields: [nodeId], references: [id], onDelete: Cascade)
}

model Alert {
  id         String   @id @default(cuid())
  type       String
  severity   String
  nodeId     String?
  node       Node?    @relation(fields: [nodeId], references: [id], onDelete: Cascade)
  message    String
  timestamp  DateTime @default(now())
  resolved   Boolean  @default(false)
  resolvedAt DateTime?
  metadata   String?
  createdAt  DateTime @default(now())

  @@index([nodeId])
  @@index([timestamp])
  @@index([resolved])
}

model Webhook {
  id        String   @id @default(cuid())
  url       String
  events    String
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  secret    String?
  lastError String?

  @@index([enabled])
}
