{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.nodeorchestrator.app",
  "productName": "Node Orchestrator",
  "copyright": "Copyright Â© 2024 Node Orchestrator Team",
  "asar": true,
  "asarUnpack": [
    "electron/**/*",
    "node_modules/electron-squirrel-startup/**/*",
    "src/templates/**/*",
    "prisma/**/*"
  ],
  "npmRebuild": false,
  "buildDependenciesFromSource": false,
  "nodeGypRebuild": false,
  "directories": {
    "output": "release",
    "buildResources": "electron/icons"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "frontend/dist/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "dist",
      "to": "dist",
      "filter": ["**/*"]
    },
    {
      "from": "frontend/dist",
      "to": "frontend/dist",
      "filter": ["**/*"]
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "electron/icons/icon.ico",
    "signAndEditExecutable": false,
    "artifactName": "${productName}-${version}-Setup.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "electron/icons/icon.ico",
    "uninstallerIcon": "electron/icons/icon.ico",
    "installerHeaderIcon": "electron/icons/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Node Orchestrator",
    "include": "electron/installer.nsh",
    "license": "LICENSE",
    "artifactName": "${productName}-${version}-Setup.${ext}"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "electron/icons/icon.icns",
    "category": "public.app-category.developer-tools",
    "artifactName": "${productName}-${version}-macOS-${arch}.${ext}",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "electron/entitlements.mac.plist",
    "entitlementsInherit": "electron/entitlements.mac.plist"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "backgroundColor": "#1a1a2e"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "deb",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "electron/icons",
    "category": "Development",
    "artifactName": "${productName}-${version}-Linux-${arch}.${ext}",
    "synopsis": "Multi-blockchain node orchestrator",
    "description": "Deploy and manage 205+ blockchain nodes with a beautiful UI. 100% free and open source.",
    "maintainer": "Node Orchestrator Team"
  },
  "deb": {
    "depends": ["libgtk-3-0", "libnotify4", "libnss3", "libxss1", "libxtst6", "xdg-utils", "libatspi2.0-0", "libuuid1"],
    "category": "Development"
  },
  "publish": null
}
